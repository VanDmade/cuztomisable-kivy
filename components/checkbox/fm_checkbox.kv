<FMCheckbox>:
    orientation: "horizontal"
    spacing: dp(8)
    size_hint_y: None
    height: dp(40)
    padding: [0, dp(6)]

    MDCheckbox:
        id: checkbox
        size_hint: None, None
        size: dp(24), dp(24)
        active: root.active
        on_active: root.on_checkbox_active(self, self.active)
        on_kv_post: root.checkbox = checkbox

    MDLabel:
        id: label
        text: root.text
        halign: "left"
        valign: "middle"
        size_hint_y: None
        height: self.texture_size[1]
        on_touch_down:
            if self.collide_point(*args[1].pos): checkbox.active = not checkbox.active