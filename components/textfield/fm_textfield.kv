<FMTextField>:
    hint_text: root.label
    password: root.is_password
    mode: "rectangle"
    size_hint_x: 1
    font_size: "14sp"
    text_color_normal: 0, 0, 0, 1
    text_color_focus: 0, 0, 0, 1
    hint_text_color_normal: 0.6, 0.6, 0.6, 1
    helper_text: root.error_text
    helper_text_mode: "persistent"
    padding: [dp(12), dp(20), dp(12), dp(10)]