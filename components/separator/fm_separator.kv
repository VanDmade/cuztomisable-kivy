<FMSeparator>:
    orientation: "horizontal"
    spacing: dp(12) if root.show_label else 0
    size_hint_y: None
    height: dp(24)
    padding: 0
    pos_hint: {"center_x": 0.5}

    Widget:
        size_hint_x: 0.4
        canvas:
            Color:
                rgba: app.theme_cls.divider_color
            Rectangle:
                size: self.width, 1
                pos: self.x, self.center_y

    MDLabel:
        text: root.label
        size_hint_x: None
        width: dp(32) if root.show_label else 0
        opacity: 1 if root.show_label else 0
        halign: "center"
        valign: "middle"
        theme_text_color: "Hint"
        font_style: "Caption"

    Widget:
        size_hint_x: 0.4
        canvas:
            Color:
                rgba: app.theme_cls.divider_color
            Rectangle:
                size: self.width, 1
                pos: self.x, self.center_y