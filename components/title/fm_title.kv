<FMTitle>:
    orientation: "horizontal"
    spacing: dp(8) if root.use_logo else 0
    size_hint_y: None
    height: dp(64)
    padding: 0

    BoxLayout:
        size_hint_x: None
        width: dp(72) if root.use_logo else 0

        Image:
            source: "assets/images/logo.png"
            size_hint: None, None
            size: dp(72), dp(72)
            allow_stretch: True
            keep_ratio: True
            pos_hint: {"center_y": 0.5}
            opacity: 1 if root.use_logo else 0
            disabled: not root.use_logo

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(4)
        padding: 0
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"center_y": 0.5}
        valign: "middle"

        MDLabel:
            text: root.title
            font_style: root.title_style
            halign: "left"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: root.subtitle
            font_style: root.subtitle_style
            halign: "left"
            theme_text_color: "Secondary"
            size_hint_y: None
            height: self.texture_size[1]