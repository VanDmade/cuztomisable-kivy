<PasswordRequirements>:
    orientation: "vertical"
    size_hint_y: None
    height: self.minimum_height
    spacing: dp(6)
    padding: dp(0), dp(8)

    MDLabel:
        text: root.length_text
        markup: True
        halign: "left"
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: root.upper_text
        markup: True
        halign: "left"
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: root.lower_text
        markup: True
        halign: "left"
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: root.number_text
        markup: True
        halign: "left"
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: root.special_text
        markup: True
        halign: "left"
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
