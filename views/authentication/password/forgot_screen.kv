<ForgotScreen@MDScreen>:
    name: "forgot"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(24)
        spacing: dp(24)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"top": 1}

        FMTitle:
            use_logo: True
            title: "Forgot Password"
            subtitle: "Enter the email address associated with your account"
            title_style: "H5"
            subtitle_style: "Body1"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(12)
            size_hint_y: None
            height: self.minimum_height
            padding: 0

            FMTextField:
                label: "Email"

        FMButton:
            label: "Send"
            size_hint_x: 1
            on_release: app.controllers.authentication.password.forgot()

        FMSeparator:
            label: "OR"

        FMLink:
            text_value: "Remember your password? Click here"
            target_screen: "login"
            halign: "center"
            pos_hint: {"center_x": 0.5, "y": 0.05}