<PasswordForgotScreen@MDScreen>:
    name: "password_forgot"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(24)
        spacing: dp(24)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"top": 1}

        FMTitle:
            use_logo: True
            title: app.T("password.forgot.title")
            subtitle: app.T("password.forgot.subtitle")
            title_style: "H5"
            subtitle_style: "Body1"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            size_hint_y: None
            height: self.minimum_height
            padding: 0

            FMTextField:
                id: username
                label: app.T("password.forgot.inputs.username")
                disabled: app.controllers.authentication.password.submitting

        FMButton:
            label: app.T("password.forgot.button")
            size_hint_x: 1
            disabled: app.controllers.authentication.password.submitting
            on_release: app.controllers.authentication.password.forgot()

        FMSeparator:
            label: app.T("password.forgot.separator")

        FMLink:
            text_value: app.T("password.forgot.back_to_login")
            target_screen: "login"
            halign: "center"
            pos_hint: {"center_x": 0.5, "y": 0.05}