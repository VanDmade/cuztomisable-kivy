<PasswordVerifyScreen@MDScreen>:
    name: "password_verify"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(24)
        spacing: dp(24)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"top": 1}

        FMTitle:
            use_logo: True
            title: app.T("password.verify.title")
            subtitle: app.T("password.verify.subtitle")
            title_style: "H5"
            subtitle_style: "Body1"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(4)
            size_hint_y: None
            height: self.minimum_height

            FMTextField:
                id: code
                label: app.T("password.verify.inputs.code")
                disabled: app.controllers.authentication.password.submitting

        FMButton:
            label: app.T("password.verify.button")
            size_hint_x: 1
            disabled: app.controllers.authentication.password.submitting
            on_release: app.controllers.authentication.password.verify()

        FMSeparator:
            label: app.T("password.verify.separator")

        FMLink:
            text_value: app.T("password.verify.back_to_login")
            target_screen: "login"
            halign: "center"
            pos_hint: {"center_x": 0.5, "y": 0.05}