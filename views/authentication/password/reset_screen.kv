<PasswordResetScreen@MDScreen>:
    name: "password_reset"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(24)
        spacing: dp(24)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"top": 1}

        FMTitle:
            use_logo: True
            title: app.T("password.reset.title")
            subtitle: app.T("password.reset.subtitle")
            title_style: "H5"
            subtitle_style: "Body1"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(12)
            size_hint_y: None
            height: self.minimum_height
            padding: 0

            FMTextField:
                id: reset_password
                label: app.T("password.reset.inputs.password")
                is_password: True
                disabled: app.controllers.authentication.password.submitting
                on_text: reset_password_requirements.password = self.text

            PasswordRequirements:
                id: reset_password_requirements

            FMButton:
                label: app.T("password.reset.button")
                size_hint_x: 1
                disabled: not reset_password_requirements.is_valid or app.controllers.authentication.password.submitting
                on_release: app.controllers.authentication.password.reset()

        FMSeparator:
            label: app.T("password.reset.separator")

        FMLink:
            text_value: app.T("password.reset.back_to_login")
            target_screen: "login"
            halign: "center"
            pos_hint: {"center_x": 0.5, "y": 0.05}