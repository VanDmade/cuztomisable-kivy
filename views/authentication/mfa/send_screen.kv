<MfaSendScreen@MDScreen>:
    name: "mfa_send"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(24)
        spacing: dp(24)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"top": 1}

        FMTitle:
            use_logo: True
            title: app.T("mfa.send.title")
            subtitle: app.T("mfa.send.subtitle")
            title_style: "H5"
            subtitle_style: "Body1"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(4)
            size_hint_y: None
            height: self.minimum_height

            FMCheckbox:
                id: email_checkbox
                text: "Email"
                active: True
                on_active: phone_checkbox.active = False if self.active else True
                disabled: app.controllers.authentication.mfa.submitting

            FMCheckbox:
                id: phone_checkbox
                text: "Phone"
                active: False
                on_active: email_checkbox.active = False if self.active else True
                disabled: app.controllers.authentication.mfa.submitting

        FMButton:
            label: app.T("mfa.send.button")
            size_hint_x: 1
            disabled: app.controllers.authentication.mfa.submitting
            on_release: app.controllers.authentication.mfa.send()