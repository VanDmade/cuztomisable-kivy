<MfaVerifyScreen@MDScreen>:
    name: "mfa_verify"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(24)
        spacing: dp(24)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"top": 1}

        FMTitle:
            use_logo: True
            title: app.T("mfa.verify.title")
            subtitle: app.T("mfa.verify.subtitle")
            title_style: "H5"
            subtitle_style: "Body1"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(4)
            size_hint_y: None
            height: self.minimum_height

            FMTextField:
                id: code
                label: app.T("mfa.verify.inputs.code")
                disabled: app.controllers.authentication.mfa.submitting

            FMCheckbox:
                id: remember
                text: "Remember device?"
                active: False
                disabled: app.controllers.authentication.mfa.submitting

        FMButton:
            label: app.T("mfa.verify.button")
            size_hint_x: 1
            disabled: app.controllers.authentication.mfa.submitting
            on_release: app.controllers.authentication.mfa.save()